{
  "extends": [
    "eslint:recommended",
    "next/core-web-vitals",
    "plugin:react-hooks/recommended"
  ],
  "rules": {
    "semi": ["error", "always"],
    "indent": ["error", 2],
    "quotes": ["error", "single", { "avoidEscape": true }],
    "no-unused-vars": ["warn"],
    "jsx-quotes": ["error", "prefer-double"],
    "no-constant-binary-expression": "error",
    "react/no-unescaped-entities": ["warn"]
  },
  "globals": {
    "React": "readonly",
    "JSX": "readonly"
  }
}
